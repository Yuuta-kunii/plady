<div class="wrapper">
  <h1>sign up</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <%= form_with model: @user,multipart: true do |f| %>
        <div class="form-group">
          <%= f.label :name,"名前",class:"text-white" %>
          <%= f.text_field :name,:placeholder=>"有馬　花子",class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image_icon,"アイコン画像",class:"text-white" %>
          <%= f.file_field :image_icon,class:"form-control" %>
        </div>
         <div class="form-group">
          <%= f.label :profile,"プロファイル",class:"text-white" %>
          <%= f.text_area :profile,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email,"メールアドレス",class:"text-white" %>
          <%= f.text_field :email,:placeholder=>"xxxx@xxxx",class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password,"ログイン用パスワード",class:"text-white" %>
          <%= f.text_field :password,:placeholder=>"6文字以上32文字以内、小、大英数字含む",class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation,"パスワード確認",class:"text-white" %>
          <%= f.text_field :password_confirmation,:placeholder=>"上記と同じパスワードを入力",class:"form-control" %>
        </div>
          <%= f.submit "sign up",class:"btn btn-block btn-submit" %>
        <% end %>  
      </div>
    </div>
  </div>
</div>