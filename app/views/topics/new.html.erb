<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-4">
        <%= form_with model: @topic do |f| %>
        <div class="topic-index">
          <%= f.label :image,"写真" %>
          <%= f.file_field :image,:placeholder=>"写真のみ",class:"form-control" %>
        </div>
        <div class="topic-index">
          <%= f.label :description,"コメント欄",class:"text-white" %>
          <%= f.text_area :description %>
        </div>
        <%= f.submit "投稿",class:"btn btn block btn-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>